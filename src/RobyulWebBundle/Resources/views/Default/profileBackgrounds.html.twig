{% extends "RobyulWebBundle:Default:base.html.twig" %}

{% block content %}
    <div class="container">
        <div class="row">
            <p class="lead">
                You can customize your Robyul Profile using one of these user submitted backgrounds.<br>
                To view your Robyul Profile say <code>{{ discord_bot_prefix }}profile</code> in Discord.<br>
                You can submit new backgrounds <a href="https://goo.gl/forms/ZYFCGWNi5tYPAfki2" target="_blank">here</a>.
            </p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <ul class="nav nav-pills backgrounds-nav">
                <li class="nav-item backgrounds-filter-button-tag">
                    <a class="nav-link active" data-toggle="pill" href="#" data-tag="">All</a>
                </li>
                {% set tagsPrintFirst = ['boy group', 'boy group'] %}
                {% for tag in tags %}
                    {% if tag in tagsPrintFirst %}
                    <li class="nav-item backgrounds-filter-button-tag">
                        <a class="nav-link" data-toggle="pill" href="#" data-tag="{{ tag }}">{{ tag|capitalize }}</a>
                    </li>
                    {% endif %}
                {% endfor %}
                {% for tag in tags|sort %}
                    {% if tag not in tagsPrintFirst %}
                        <li class="nav-item backgrounds-filter-button-tag">
                            <a class="nav-link" data-toggle="pill" href="#" data-tag="{{ tag }}">{{ tag|capitalize }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="row justify-content-md-center backgrounds-container">
            {% for background in backgrounds %}
            <div class="col col-12 col-lg-5 background-item"
                data-tags="{% if "tags" in background|keys %}{{ background.tags|join(',') }}{% endif %}" data-name="{{ background.id }}"
            >
                <div class="card background-card">
                    <img class="card-img-top" src="{{ background.url }}" alt="{{ background.id }}">
                    <div class="card-block">
                        <p class="card-text">
                            To choose this Background say<br><code>{{ discord_bot_prefix }}profile background {{ background.id }}</code> in Discord.</p>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

